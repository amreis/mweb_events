.event-summary
  %h3
    = @event.name

  %p
    %i.fa.fa-calendar-o
    %meta{:itemprop => "startDate", :content => @event.start_on_with_time_zone}
    %time{ :datetime => @event.start_on_with_time_zone }
      = t('.start_on')
      = l @event.start_on_with_time_zone

  %p
    %i.fa.fa-calendar-o
    %meta{:itemprop => "endDate", :content => @event.end_on_with_time_zone}
    %time{ :datetime => @event.end_on_with_time_zone }
      = t('.end_on')
      = l @event.end_on_with_time_zone

  %p
    %i.fa.fa-clock-o
    = t('.time_zone')
    = @event.time_zone

  .event-map
    - latlng = [@event.latitude, @event.longitude]
    = map(:center => { :latlng => latlng, :zoom => 15 }, :markers => [{ :latlng => latlng, :popup => @event.address}])

  %p{:itemprop=>"location", :itemtype=>"http://schema.org/Place"}
    %i.fa.fa-map-marker
    = @event.address

  %ul.nav.nav-pills.nav-stacked
    %li
      %a.calendar.summary-button{:href => event_path(@event, :format => 'ics')}
        %i.fa.fa-calendar
        = t('.calendar')

    %li
      %a.contact.summary-button{:href => "#"}
        %i.fa.fa-envelope
        = t('.contact')

    %li
      %a.rss.summary-button{:href => "#"}
        %i.fa.fa-rss
        = t('.rss')
